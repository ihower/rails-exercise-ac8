<p>Total: <%= current_cart.total %> </p>

<p>Amount:  $<%= current_cart.amount %></p>

<ul>
  <% current_cart.line_items.each do |line| %>
    <li>
      <%= line.product.name %> 買了 <%= line.qty %> 個
      <%= link_to "取消", cancel_product_path( line.product ), :method => :post %>
    </li>
  <% end %>
</ul>
