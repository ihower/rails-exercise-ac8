<%= form_for @topic do |f| %>

  <div class="form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>

<% end %>
