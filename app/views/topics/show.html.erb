<h1><%= @topic.subject %></h1>

<% if @topic.image.exists? %>
  <%= link_to @topic.image.url, :target => "_blank" do %>
    <%= image_tag(@topic.image.url(:thumb)) %>
  <% end %>
<% end %>

<%= simple_format @topic.content %>

<%= form_for [@topic, @comment] do |f| %>

  <% if @comment.errors.any? %>
     <% @comment.errors.full_messages.each do |m| %>
     <p><%= m %></p>
     <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, :class => "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit :class => "btn btn-warning" %>
  </div>
<% end %>

<h2>Comment list</h2>

<ul>
<% @topic.comments.order("id DESC").each do |c| %>
  <li><%= c.content %> by <%= c.user.try(:display_name) %>

    <% if current_user && c.user == current_user %>
      <%= link_to "Delete", topic_comment_path(@topic, c), :method => :delete %>
    <% end %>

  </li>
<% end %>
</ul>
